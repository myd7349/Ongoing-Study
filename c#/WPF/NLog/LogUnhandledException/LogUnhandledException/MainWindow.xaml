<Window x:Class="LogUnhandledException.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogUnhandledException"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid>
        <Button x:Name="crushMeButton_"
                Content="Crush Me"
                Click="crushMeButton__Click" />
        <Button x:Name="tryCrushMeAgainButton_"
                Content="Crush Me Again"
                Click="tryCrushMeAgainButton__Click" />
    </UniformGrid>
</Window>
